{
  "name": "@beenotung/tslib",
  "version": "16.1.1",
  "description": "utils library in Typescript",
  "keywords": [
    "Typescript",
    "Library",
    "Utility"
  ],
  "author": {
    "name": "Beeno Tung",
    "email": "aabbcc1241@yahoo.com.hk",
    "url": "https://beeno-tung.surge.sh"
  },
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenotung/tslib.git"
  },
  "bugs": {
    "url": "https://github.com/beenotung/tslib/issues"
  },
  "homepage": "https://github.com/beenotung/tslib#readme",
  "scripts": {
    "clean": "rm -rf dist",
    "pregen-index": "tsc-macro",
    "gen-index": "gen-index",
    "prebuild": "run-s clean gen-index format",
    "build": "tsc -p .",
    "postbuild": "rm src/index.ts && find dist -name '*.macro.*' -delete",
    "lint": "tslint --project tsconfig.json -c tslint.json",
    "dev": "run-p watch:*",
    "watch:build": "tsc -p . --watch",
    "watch:lint": "chokidar src/**/*.ts -c \"run-s format lint\" --initial --verbose",
    "format": "prettier --write \"src/**/*.ts\"",
    "postformat": "tslint --fix -p .",
    "fix": "eslint --fix src/**/*.ts",
    "test": "run-s build lint",
    "precommit": "run-s format test",
    "commit": "git commit $@",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "form-data": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "node-localstorage": "^2.1.5",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@beenotung/gen-index": "^1.0.9",
    "@types/cli-progress": "^3.4.1",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/node": "*",
    "@types/tape": "^4.2.33",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "chokidar": "^3.3.1",
    "chokidar-cli": "^2.1.0",
    "cli-progress": "^3.6.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "tape": "^4.10.1",
    "tsc-macro": "^0.0.2",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-etc": "^1.10.0",
    "typescript": "^3.7.5",
    "typescript-eslint": "^0.0.1-alpha.0"
  }
}
